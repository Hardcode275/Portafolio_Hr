---
const { title, description } = Astro.props;
 import './src/styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
</head>
<body>
    <header>
        <h1>{title}</h1>
    </header>
    <main>
        <slot />
    </main>
    <footer>
        <p>&copy; 2023 HardCode275. All rights reserved.</p>
    </footer>
</body>
</html>